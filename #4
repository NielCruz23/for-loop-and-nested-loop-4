#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    cout << "-------------------------------------------\n";
    cout << "              Multiplication Tables        \n";
    cout << "-------------------------------------------\n\n";

    for (int table = 0; table <= 4; ++table)
    {
        cout << "Table of " << table << ":\n";
        cout << "--------------------\n";

        for (int i = 1; i <= 10; ++i)
        {
            cout << std::setw(2) << table << " x " << setw(2) << i << " = " << setw(3) << table * i << "\n";
        }
        cout << "\n";
    }

    cout << "-------------------------------------------\n";
    return 0;
}
